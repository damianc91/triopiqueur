<Page x:Class="WpfApp1.SubtitleResults"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SubtitleResults">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.5*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="19*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1">
            <Button Background="#FF929BA7" x:Name="btnClassements" Click="btnClassements_Click" BorderBrush="{x:Null}" Height="Auto"  Margin="1,0" >
                <Label Content="Classements" Foreground="White" Margin="-18,0"/>
            </Button>
        </StackPanel>
        <StackPanel Grid.Column="2">
            <Button Background="#FF929BA7" x:Name="btnResultats" Click="btnResultats_Click" BorderBrush="{x:Null}" Height="Auto"  Margin="1,0" >
                <Label Content="Résultats" Foreground="White" Margin="-18,0"/>
            </Button>
        </StackPanel>
    </Grid>


</Page>
